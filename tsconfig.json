{
  "include": ["./src/**/*.ts"],
  "compilerOptions": {
    "lib": ["es2022"],
    "module": "esnext",
    "target": "es2022",
    "moduleResolution": "Node",

    "rootDir": "./src",
    "outDir": "build",

    "strict": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "resolveJsonModule": true,
  },
  "references": [{ "path": "./tsconfig.node.json" }]
}
